<!-- Nav bar -->
<nav class="uk-navbar-container" uk-navbar>
    <!-- Lefthand links -->
    <div class="uk-navbar-left">
        <ul class="uk-navbar-nav">
            <li class="uk-active"><a href="/"><span uk-icon="home"></span></a></li>
            <li class="uk-parent"><a href="/sightings">Historical Sightings</a></li>
            <li class="uk-parent"><a href="/resources">Find Out More</a></li>
        </ul>
    </div>
    <!-- Center logo -->
    <div class="uk-navbar-center">
        <a href="/" class="uk-navbar-item uk-logo">PNW Whales</a>
    </div>
    <!-- Righthand links -->
    <div class="uk-navbar-right">
        <ul class="uk-breadcrumb">
            <li id="login" class="uk-active"><a href="#login-modal" uk-toggle>Log In</a></li>
            <li id="signup" class="uk-active"><a href="#signup-modal" uk-toggle>Sign Up</a></li>
