{{!-- Sign Up Modal --}}
<div id="signup-modal" class="uk-flex-top" uk-modal>
    <div class="modal-width uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
        <h2 class="uk-modal-title">Sign Up</h2>
        <form>
            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input id="username" class="uk-input" type="text" placeholder="Username">
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: lock"></span>
                    <input id="password" class="uk-input" type="password" placeholder="Password">
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="chevron-right"></span>
                    <input id="first-name" class="uk-input" type="text" placeholder="First Name">
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="chevron-right"></span>
                    <input id="last-name" class="uk-input" type="text" placeholder="Last Name">
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: mail"></span>
                    <input id="email" class="uk-input" type="text" placeholder="Email">
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: receiver"></span>
                    <input id="phone" class="uk-input" type="text" placeholder="Phone Number">
                </div>
            </div>
            <div id="notifications" class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
                <p>Receive Notifications?</p>
                <label><input class="uk-radio" type="radio" name="radio2" value="Yes" checked> Yes</label>
                <label><input class="uk-radio" type="radio" name="radio2"> No</label>
            </div>
            <button id="signup-btn" class="uk-button uk-button-primary">Create an Account</button>
        </form>
        <button class="uk-modal-close-default" type="button" uk-close></button>
    </div>
</div>